{
  "name": "inline-git-diff",
  "main": "./lib/main",
  "version": "2.3.0",
  "description": "Inline git diffs in editor.",
  "keywords": [
    "git",
    "diff",
    "inline"
  ],
  "repository": "https://github.com/t9md/atom-inline-git-diff",
  "license": "MIT",
  "engines": {
    "atom": ">=1.7.0"
  },
  "dependencies": {
    "diff": "^2.2.2",
    "fs-extra": ">=8.0.0" 
  },
  "devDependencies": {
    "prettier": "^1.10.2",
    "standard": "^10.0.3"
  },
  "scripts": {
    "test": "apm test",
    "watch": "fswatch -0 spec lib | xargs -0 -n1 -I{} apm test",
    "prettier": "prettier --write --no-semi --print-width=120 --no-bracket-spacing --trailing-comma=es5 'lib/**/*.js' 'spec/*.js'",
    "lint": "standard lib/*.js lib/**/*.js spec/*.js"
  },
  "standard": {
    "env": {
      "atomtest": true,
      "browser": true,
      "jasmine": true,
      "node": true
    },
    "globals": [
      "atom"
    ],
    "ignore": [
      "spec/fixtures/*"
    ]
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "providedServices": {
    "inline-git-diff": {
      "versions": {
        "1.0.0": "provideInlineGitDiff"
      }
    }
  },
  "configSchema": {
    "showInStatusBar": {
      "order": 0,
      "type": "boolean",
      "default": true
    },
    "statusBarStyle": {
      "order": 1,
      "type": "string",
      "default": "icon + text",
      "enum": [
        "icon + text",
        "icon",
        "text"
      ]
    }
  }
}
